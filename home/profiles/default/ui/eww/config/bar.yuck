;;center
(include "widgets/lock/lock.yuck")
(include "widgets/lockpopup/lockpopup.yuck")
;;right
(include "widgets/clock/clock.yuck")
(include "widgets/pfp/pfp.yuck")
(include "widgets/network/network.yuck")
(include "widgets/calendar/calendar.yuck")
;;variables
(include "vars/variables.yuck")


(defwindow bar
           :monitor 0 
           :exclusive false 
           :stacking "bg"
           :windowtype "normal"
           :geometry (geometry
                      :x "0%"
                      :y "1%"
                      :width "85%"
                      :height "7%"
                      :anchor "top center")
  (bar_layout))

(defwidget bar_layout []
  (centerbox
           :class "bar_layout"
           :orientation "h"
           (left)
           (center)
           (right)))

(defwidget left []
  (box
           :class "left"
           :halign "start"
           :space-evenly false
           :orientation "h"
           (workspaces)))
           
(defwidget center []
  (box
           :class "center"
           :orientation "h"
           :halign "center"
           (lock)))

(defwidget right []
  (box
           :class "right"
           :orientation "h"
           :spacing 5 
           :space-evenly false
           :halign "end"
           (network)
           (clock)
           (pfp)))
           
           
