source = $HOME/.config/hypr/mocha.conf

$white = rgba(223, 209, 216, 1.0) 
$font = SF Mono 

# BACKGROUND
background {
    monitor = eDP-1
    path = $HOME/.wallpapers/53.png
    blur_passes = 3
    contrast = 0.8916
    brightness = 0.8172
    vibrancy = 0.1696
    vibrancy_darkness = 0.0
    color = $base
}

image {
    monitor =
    path = ~/.wallpapers/pfp.png
    size = 100
    border_color = $white
    position = 0, 70 
    halign = center
    valign = bottom 
}

# GENERAL
general {
    no_fade_in = false
    grace = 0
    disable_loading_bar = true
    hide_cursor = true
}

# INPUT FIELD
input-field {
    monitor =
    size = 250, 60
    outline_thickness = 4 
    dots_size = 0.2 # Scale of input-field height, 0.2 - 0.8
    dots_spacing = 0.2 # Scale of dots' absolute size, 0.0 - 1.0
    dots_center = true
    outer_color = $white 
    inner_color = $surface0 
    font_color = $text 
    fade_on_empty = false
    placeholder_text = <span foreground="##$textAlpha"><i>  Logged in as </i><span foreground="##$skyAlpha">$USER</span></span>
    hide_input = false
    position = 0, -20
    halign = center
    valign = center
    check_color = $yellow 
    fail_color = $red # if authentication failed, changes outer_color and fail message color
    fail_text = <i>AUTH FAILED <b>($ATTEMPTS)</b></i> # can be set to empty
    fail_transition = 300 # transition time in ms between normal outer_color and fail_color
    capslock_color = $peach 
    numlock_color = $sky
    bothlock_color = -1 # when both locks are active. -1 means don't change outer color (same for above)
    invert_numlock = false # change color if numlock is off
}

# TIME
label {
    monitor =
    text = $TIME 
    color = $text 
    font_size = 60
    font_family = $font 
    position = 0, -50
    halign = center
    valign = top 
}

# DATE 
label {
    monitor = 
    text = cmd[update:43200000] echo "$(date +"%A, %d %B %Y")"
    color = $text
    font_size = 12 
    font_family = $font
    position = 0, -140 
    halign = center 
    valign = top
}

# CURRENT SONG
label {
    monitor =
    text = cmd[update:150000] echo "<span foreground='##ccd6f4'>$(playerctl metadata --format '{{title}}   {{artist}}')</span>"   
    color = $text 
    font_size = 8
    font_family = $font 
    position = 10, -35 
    halign = left
    valign = bottom
}

